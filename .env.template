# =============================================================================
# LEGACY-USE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure the values below

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Choose ONE of the following AI providers by setting its API key.

# Option 1: Anthropic Claude (Recommended - most tested)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Option 2: OpenAI GPT (Alternative)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Option 3: Google Generative AI (Alternative)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_GENAI_API_KEY=

# Option 4: Use Anthropic Claude via AWS Bedrock
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_SESSION_TOKEN=

# Option 5: Use Anthropic Claude via Google Vertex AI
VERTEX_PROJECT_ID=
VERTEX_REGION=us-central1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# For Docker setup, use: postgresql://pguser:pgpass@postgres:5432/legacy_use
# For local development: postgresql://pguser:pgpass@localhost:5432/legacyuse
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/legacy_use

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry error tracking (optional)
VITE_SENTRY_DSN_UI=
SENTRY_DSN_API=

# PostHog analytics (optional)
VITE_PUBLIC_DISABLE_TRACKING=false

# =============================================================================
# AUTHENTICATION (CLOUD VERSION ONLY)
# =============================================================================
# Clerk authentication - only needed for cloud deployment
VITE_CLERK_PUBLISHABLE_KEY=pk_test_c3VidGxlLWdvcmlsbGEtMzguY2xlcmsuYWNjb3VudHMuZGV2JA

# =============================================================================
# SECURITY & FEATURES
# =============================================================================
# Enable OpenVPN target creation (requires elevated privileges)
VITE_ALLOW_OPENVPN=false

# Show API documentation at /redoc
SHOW_DOCS=true

# Hide internal endpoints in API documentation
HIDE_INTERNAL_API_ENDPOINTS_IN_DOC=true

# =============================================================================
# LEGACY-USE PROXY (ENTERPRISE)
# =============================================================================
# API key for Legacy-Use proxy service (enterprise feature)
LEGACYUSE_PROXY_API_KEY=
